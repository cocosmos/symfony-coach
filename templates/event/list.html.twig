{% extends 'base.html.twig' %}

{% block title %}List Tickets{% endblock %}

{% block body %}
    <h1>List Tickets</h1>

    <table class="table">
            <thead>
                <tr>
                    <th>Request</th>
                    <th>Group Name</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.request }}</td>
                <td>{{ ticket.group.name }}</td>
                <td>{{ ticket.createdAt ? ticket.createdAt|date("F jS \\a\\t g:ia") : '' }}</td>
                <td>
                    <a href="{{ path('app_event_ticket_edit', {'adminLinkToken': event.adminLinkToken, 'id': ticket.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
