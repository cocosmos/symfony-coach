{% extends 'base.html.twig' %}

{% block title %}Group index{% endblock %}

{% block body %}
    <h1>Group index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>LinkToken</th>
                <th>LastArchived</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.id }}</td>
                <td>{{ group.name }}</td>
                <td>{{ group.linkToken }}</td>
                <td>{{ group.lastArchived ? group.lastArchived|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_group_show', {'linkToken': group.linkToken}) }}">show</a>
                    <a href="{{ path('app_group_edit', {'linkToken': group.linkToken}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_group_new') }}">Create new</a>
{% endblock %}
